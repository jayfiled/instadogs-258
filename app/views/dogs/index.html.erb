<div class="container">
  <h1>Dogs</h1>

  <div class="row">
    <% @dogs.each do |dog| %>
      <div class="col-sm-12 col-md-4">
        <%= link_to dog_path(dog) do %>
          <div class="card">
            <div class="card-image" style="background: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url(<%= image_path('https://raw.githubusercontent.com/rodloboz/lw-fullstack/master/instadogs/images/kogi-1.jpg') %>) center / cover no-repeat;"></div>
            <div class="card-content">
              <div class="card-name">
                <%= dog.name %>
                <span class="card-age">
                  <%= pluralize(dog.age, 'year') %> old
                </span>
              </div>
              <div class="card-info">
                <%= dog.breed %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= link_to "Add a Dog", new_dog_path %>
</div>
